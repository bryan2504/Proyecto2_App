<% if signed_in? %>
<p id="notice"><%= notice %></p>

<h1>Kanjis</h1>

<table>
  <thead>
    <tr>
      <th>Leccion</th>
      <th>Explicacion</th>
      <th>Parte</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kanjis.each do |kanji| %>
      <tr>
        <td><%= kanji.leccion %></td>
        <td><%= kanji.explicacion %></td>
        <td><%= kanji.parte %></td>
        <td><%= link_to 'Show', kanji %></td>
        <td><%= link_to 'Edit', edit_kanji_path(kanji) %></td>
        <td><%= link_to 'Destroy', kanji, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Kanji', new_kanji_path %>
<% else %>
  <h1>Necesita hacer login para acceder a esa direcci√≥n</h1>
<% end %>