<% if signed_in? %>
<p id="notice"><%= notice %></p>

<h1>Katakanas</h1>

<table>
  <thead>
    <tr>
      <th>Leccion</th>
      <th>Explicacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @katakanas.each do |katakana| %>
      <tr>
        <td><%= katakana.leccion %></td>
        <td><%= katakana.explicacion %></td>
        <td><%= link_to 'Show', katakana %></td>
        <td><%= link_to 'Edit', edit_katakana_path(katakana) %></td>
        <td><%= link_to 'Destroy', katakana, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Katakana', new_katakana_path %>
<% else %>
   <h1>Necesita hacer login para acceder a esa direcci√≥n</h1>
<% end %>