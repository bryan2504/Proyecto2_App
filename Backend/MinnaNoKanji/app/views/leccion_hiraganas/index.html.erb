<% if signed_in? %>
<p id="notice"><%= notice %></p>

<h1>Leccion Hiraganas</h1>

<table>
  <thead>
    <tr>
      <th>Leccion</th>
      <th>Significado</th>
      <th>Url imagen</th>
      <th>Hiragana</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leccion_hiraganas.each do |leccion_hiragana| %>
      <tr>
        <td><%= leccion_hiragana.leccion %></td>
        <td><%= leccion_hiragana.significado %></td>
        <td><%= leccion_hiragana.url_imagen %></td>
        <td><%= leccion_hiragana.hiragana %></td>
        <td><%= link_to 'Show', leccion_hiragana %></td>
        <td><%= link_to 'Edit', edit_leccion_hiragana_path(leccion_hiragana) %></td>
        <td><%= link_to 'Destroy', leccion_hiragana, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Leccion Hiragana', new_leccion_hiragana_path %>

