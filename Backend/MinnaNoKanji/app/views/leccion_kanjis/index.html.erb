<% if signed_in? %>
<p id="notice"><%= notice %></p>

<h1>Leccion Kanjis</h1>

<table>
  <thead>
    <tr>
      <th>Leccion</th>
      <th>Numero</th>
      <th>Significado</th>
      <th>Imagen kanji</th>
      <th>Imagen trazos</th>
      <th>Explicacion</th>
      <th>Extra</th>
      <th>Kanji</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leccion_kanjis.each do |leccion_kanji| %>
      <tr>
        <td><%= leccion_kanji.leccion %></td>
        <td><%= leccion_kanji.numero %></td>
        <td><%= leccion_kanji.significado %></td>
        <td><%= leccion_kanji.imagen_kanji %></td>
        <td><%= leccion_kanji.imagen_trazos %></td>
        <td><%= leccion_kanji.explicacion %></td>
        <td><%= leccion_kanji.extra %></td>
        <td><%= leccion_kanji.kanji %></td>
        <td><%= link_to 'Show', leccion_kanji %></td>
        <td><%= link_to 'Edit', edit_leccion_kanji_path(leccion_kanji) %></td>
        <td><%= link_to 'Destroy', leccion_kanji, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Leccion Kanji', new_leccion_kanji_path %>
<% else %>
   <h1>Necesita hacer login para acceder a esa direcci√≥n</h1>
<% end %>