<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Convertidor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView17"
            android:layout_marginTop="210dp"
            android:text="Resultado"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="39dp"
            android:layout_marginTop="50dp"
            android:text="Cantidad de Dinero"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/valoresText"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/btnConvertir"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:background="#303f9f"
            android:onClick="onTextClicked"
            android:text="Convertir"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnConvertir"
            android:layout_below="@+id/resultadoText"
            android:gravity="center"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButtonC2Y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Colones a Yenes"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonY2C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Yenes a Colones"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/resultadoText"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/valoresText"
            android:layout_below="@+id/textView16"
            android:layout_marginTop="17dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>