<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bryan.minnanokanji.Registrarse">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView16"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Registro de Usuario"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/editTextREmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView18"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Correo Electr칩nico"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextRNick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextREmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextRNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextRNick"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Pseud칩nimo"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextRPass1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextRNickname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Contrase침a"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editTextRPass2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editTextRPass1"
            android:layout_below="@+id/editTextRPass1"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Repetir Contrase침a"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/buttonRCamera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/textView18"
            android:layout_below="@+id/editTextRPass2"
            android:layout_marginTop="20dp"
            android:background="@android:drawable/ic_menu_camera" />

        <Button
            android:id="@+id/buttonRGallery"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/buttonRCamera"
            android:layout_alignEnd="@+id/textView18"
            android:background="@android:drawable/ic_menu_gallery" />

        <Button
            android:id="@+id/buttonRSave"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="#303f9f"
            android:text="Guardar"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>